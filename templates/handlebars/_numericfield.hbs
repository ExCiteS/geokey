<h5>{{name}} ({{key}})</h5>
<div class="form-group">
    <label for="{{key}}-min" class="col-sm-3 col-sm-offset-1 control-label">is larger than</label>
    <div class="col-sm-7">
        <input type="number" class="form-control" name="{{key}}-min" id="minval" {{#if minval}}min="{{minval}}" placeholder="{{minval}}" {{/if}} {{#if maxval}}max="{{maxval}}"{{/if}}>
    </div>
</div>

<div class="form-group">
    <label for="{{key}}-max" class="col-sm-3 col-sm-offset-1 control-label">is lower than</label>
    <div class="col-sm-7">
        <input type="number" class="form-control" name="{{key}}-max" id="maxval" {{#if maxval}}max="{{maxval}}" placeholder="{{maxval}}" {{/if}} {{#if minval}}min="{{minval}}"{{/if}}>
    </div>
</div>