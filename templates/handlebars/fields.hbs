{{#each fields}}
    <div class="alert alert-info">Please set the value for each individual field you want to filter for. If you leave a filter blank, the field will not be filtered for.</div>

    <div class="field-filter form-horizontal" data-key="{{key}}" data-type="{{fieldtype}}">
        {{#ifCond fieldtype 'TextField'}}
            {{> textfield}}
        {{/ifCond}}
        {{#ifCond fieldtype 'NumericField'}}
            {{> numericfield}}
        {{/ifCond}}
        {{#ifCond fieldtype 'DateTimeField'}}
            {{> datefield}}
        {{/ifCond}}
        {{#ifCond fieldtype 'TrueFalseField'}}
            {{> truefalsefield}}
        {{/ifCond}}
        {{#ifCond fieldtype 'LookupField'}}
            {{> lookupfield}}
        {{/ifCond}}
    </div>
{{/each}}